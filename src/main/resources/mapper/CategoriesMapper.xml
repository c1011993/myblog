<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.javatiaocao.myblog.mapper.CategoriesMapper">

    <update id="updateCategory">
        insert into categories(categoryName) values (#{categoryName})
    </update>
    <delete id="deleteCategory">
        delete from categories where categoryName = #{categoryName}
    </delete>

    <select id="getArticleCategories" resultType="com.javatiaocao.myblog.model.Categories">
        select * from categories
    </select>
    <select id="findIsExistByCategoryName" resultType="java.lang.Integer">
    SELECT IFNULL((select id from categories where categoryName = #{categoryName}),0)
    </select>
    <select id="findCategoriesName" resultType="java.lang.String">
        select categoryName from categories
    </select>


</mapper>
